                <Label layoutX="235.0" layoutY="7.0" text="Find Vertex">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="32.0" />
                    </font>
                </Label>
                <Label layoutX="146.0" layoutY="84.0" text="Select the Degree of Accuracy">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="24.0" />
                    </font>
