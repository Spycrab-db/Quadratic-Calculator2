<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.FindXIntController">
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
    <children>
        <AnchorPane fx:id="scenePane" prefHeight="349.0" prefWidth="647.0" GridPane.rowIndex="1">
         <children>
            <Slider fx:id="accuracySlider" layoutX="175.0" layoutY="156.0" majorTickUnit="1.0" max="10.0" minorTickCount="0" prefHeight="14.0" prefWidth="313.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" />
            <Label layoutX="231.0" layoutY="14.0" text="Find X-Intercept">
               <font>
                  <Font name="Arial Rounded MT Bold" size="26.0" />
               </font>
            </Label>
            <Label layoutX="161.0" layoutY="89.0" text="Select the Degree of Accuracy">
               <font>
                  <Font name="Arial Rounded MT Bold" size="23.0" />
               </font>
            </Label>
            <Label fx:id="decimalPlacesLabel" layoutY="207.0" prefHeight="36.0" prefWidth="647.0" text="0 Decimal Places" textAlignment="CENTER">
               <font>
                  <Font name="Arial Rounded MT Bold" size="25.0" />
               </font>
            </Label>
